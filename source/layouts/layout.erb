        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span8 offset2">
          <% if data.page.title %>
            <h2><%= data.page.title %></h2>
          <% end %>
          <%= yield %>
        </div>
      </div>
